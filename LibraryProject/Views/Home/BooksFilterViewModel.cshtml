@model LibraryProject.Models.BooksFilterModel

@{
    ViewBag.Title = "BooksFilterViewModel";
}

<h2>BooksFilterViewModel</h2>

@*<p>
    @Html.ActionLink("Добавить игрока", "Create")
</p>*@

<form method="get">
    <div class="form-inline">
        <label class="control-label">Publisher </label>
        @Html.DropDownList("publisher", Model.BooksPublisher as SelectList,
                    htmlAttributes: new { @class = "form-control" })

       <input type="submit" value="Filtr" class="btn btn-default" />
    </div>
</form>

<table>
    <tr>
        <th>Name</th>
        <th>Author</th>
        <th>Publisher</th>
        <th>Price</th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model.Books)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            @*<td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>*@
        </tr>
    }
</table>
