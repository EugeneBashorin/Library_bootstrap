@using LibraryProject.Models;
@model Book

@{
    ViewBag.Title = "Create book";
}
<h4>Add a book</h4>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder="Name" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Author, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Author, new { @class = "form-control", placeholder = "Author" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Publisher, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Publisher, new { @class = "form-control", placeholder = "Publisher" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Price, new { @class = "form-control", placeholder = "Price" })
        </div>
    </div>

    <input type="submit" class="btn btn-sm btn-success" value="Add">
    @Html.ActionLink("Back to list", "Index", "Home", new { }, new { @class = "btn btn-sm btn-success" })
}